<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="@color/colorWhite"/> <!-- Replace with your desired color -->

    <!-- Corner Radius -->
    <corners android:radius="16dp"/> <!-- Adjust for your desired roundness -->

    <!-- Optional Stroke -->
    <stroke
        android:width="2dp"
        android:color="#6200EE"/> <!-- Replace with your desired stroke color -->

    <!-- Optional Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
